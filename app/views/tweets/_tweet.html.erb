<li class="list-group-item">
  <%= tweet.body %>
  <div class="me-4">
    <%= image_tag tweet.twitter_account.image, class: "rounded-circle" %>
    <%= link_to "@#{tweet.twitter_account.username}", "https://twitter.com/#{tweet.twitter_account.username}/", target: :_blank %>

    <% if tweet.is_published? %>
      <%= link_to "View Tweet", "https://twitter.com/#{tweet.twitter_account.username}/status/#{tweet.tweet_id}", target: :_blank, class:"btn btn-link btn-sm" %>
    <% else %>
      Scheduled for <%= l tweet.publish_at, format: :short %>
      <%= link_to "Edit Tweet", edit_tweet_path(tweet) , class:"btn btn-link btn-sm" %>
    <% end %>
  </div>
</li>
