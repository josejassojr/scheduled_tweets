<h1>Change Password</h1>

<%= form_with model: Current.user, url: password_path do |form| %>

	<% if Current.user.errors.any? %>
		<div class="alert alert-danger">
			<% Current.user.errors.full_messages.each do |message| %>
				<div> <%= message %> </div>
			<% end %>
		</div>
	<% end %>
	<div class="mb-3">
		<%= form.label "New Password" %>
		<%= form.password_field :password, class:"form-control", placeholder:"password" %>
	</div>
	<div class="mb-3">
		<%= form.label "Confirm New Password" %>
		<%= form.password_field :password_confirmation, class:"form-control", placeholder:"password" %>
	</div>
	<div class="mb-3">
		<%= form.submit "Update Password", class:"btn btn-primary" %>
	</div>
	
<% end %>
